{  
  "name": "haotab",  
  "version": "0.0.1",  
  "description": "chrome tabs manage tools",  
  "browser_action": {  
    "default_icon": "icon.png" ,
    "default_title": "haotab",
    "default_popup": "popup.html"
  },
  "content_scripts":{
    "matches":["*"],
    "js":["js/main.js"],
    "run_at":"document_idle"
  },
  "offline_enabled":true,
  "permissions":["tabs"]
} 